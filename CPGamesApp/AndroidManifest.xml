<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudpoint.activitis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cloudpoint.activitis.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:screenOrientation="portrait"
		          android:launchMode="singleTop"
		          android:name=".TAB_CategoryActivity"/>
		<activity android:screenOrientation="portrait"
		          android:launchMode="singleTop"
		          android:name=".TAB_FocusActivity"/>
		<activity android:screenOrientation="portrait"
		          android:launchMode="singleTop"
		          android:name=".TAB_LimitfreeActivity"/>
		<activity android:screenOrientation="portrait"
		          android:launchMode="singleTop"
		          android:name=".TAB_MoreActivity"/>
		<activity android:screenOrientation="portrait"
		          android:launchMode="singleTop"
		          android:name=".TAB_SpecializedActivity"/>
    </application>

</manifest>
